<div class="titleBar well col-xs-12">
    <div class="col-xs-2">
      <% if ( picture  ===  "") { %>
        <img class="itemImg" src="noImg.png" />
    <% }else{ %>
        <img src=" <%- picture %> " class="itemImg" />
        <%}%>
    </div>
    <div class="itemTitle col-xs-8">
        <h4> <%- fixture.toUpperCase().bold() %> </h4>
        <%- model.toLowerCase().italics() %>
    </div>
    <div class="itemImg col-xs-2">
        <% if (status  === 'broken') { %>
            <span class="glyphicon glyphicon-wrench" title="Status: <%- status %>" style="color:red"></span>
            <% }else if (status  === 'working') { %>
                <% }else{ %>
                    <span class="glyphicon glyphicon-question-sign" title="Status: unknown" style="color:grey"></span>
                    <%}%>
    </div>
</div>
